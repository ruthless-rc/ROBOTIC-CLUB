#include <stdio.h>
#include <math.h> 

int main() {
    int x, n, i;
    int result = 1;  

    printf("Enter the value of x: ");
    scanf("%d", &x);
    printf("Enter the value of n: ");
    scanf("%d", &n);

    for (i = 1; i <= n; ++i) {
        result += pow(x, i);  
    }

    printf("The result of the series is: %d\n", result);

    return 0;
}
